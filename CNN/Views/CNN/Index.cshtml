
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/CNN.css" rel="stylesheet" type="text/css" />
<div class="list-group">
    @{

        var newslist = ViewBag.newsList;
        for (int i = 0; i < newslist.Count; i++)
        {
            <a class="list-group-item" href="/CNN/detail?url=@newslist[i].url">
                @if (newslist[i].img_url != "")
                {
                    <img src="@newslist[i].img_url" class="img-rounded preshowImage" />
                }
                <p>@newslist[i].title</p>
            </a>
        }

    }
</div>